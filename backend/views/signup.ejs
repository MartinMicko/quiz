<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

  <body>

    <%- include('partials/header') %>

      <% if (typeof errors !=='undefined' && errors.length> 0) { %>
        <div class="alert alert-danger">
          <ul>
            <% errors.forEach(function(error) { %>
              <li>
                <%= error.msg || error %>
              </li> <!-- express-validator typicky používa error.msg -->
              <% }); %>
          </ul>
        </div>
        <% } %>

          <div class="center">
            <section class="form-container">
              <h3>Sign Up Form</h3>
              <form action="/signup" method="post">

                <div class="mb-3">
                  <label for="nickname" class="form-label">Nickname</label>
                  <input type="text" class="form-control" id="nickname" name="username" placeholder="Enter nickname"
                    required>
                </div>

                <div class="mb-3">
                  <label for="email" class="form-label">E-mail</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email"
                    required>
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Enter password"
                    required>
                </div>
                <div class="mb-3">
                  <label for="confirm_password" class="form-label">Password again</label>
                  <input type="password" class="form-control" id="confirm_password" name="confirm_password"
                    placeholder="Repeat password" required>
                </div>
                <button type="submit" class="btn btn-form">Create account</button>
              </form>
            </section>
          </div>

          <%- include('partials/footer') %>

  </body>

</html>